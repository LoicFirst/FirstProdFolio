# Test Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Base de données MongoDB
# Format recommandé: mongodb+srv://username:password@cluster.mongodb.net/?appName=ClusterName
# Remplacez <password> par votre mot de passe réel (pas les crochets < >)
MONGODB_URI=mongodb+srv://YOUR_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/?appName=Cluster0

# NextAuth.js (authentification)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=YOUR_GENERATED_SECRET_HERE
NEXTAUTH_URL=http://localhost:3000

# Identifiants admin
# Email must be a valid email format
# Password must be at least 8 characters
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=YourSecurePassword123
ADMIN_NAME=Admin User

# Cloudinary (upload d'images) - Optional for basic testing
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
